<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player1"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/btnImg5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="4" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5">

        <ImageView
            android:id="@+id/btnImg4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5">

        <ImageView
            android:id="@+id/btnImg6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="5" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_above="@+id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_below="@+id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-14dp"
        android:layout_marginRight="-14dp"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-14dp"
        android:layout_marginLeft="-14dp"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/btnImg8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="7" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/btn8"
        android:layout_toLeftOf="@+id/btn8">

        <ImageView
            android:id="@+id/btnImg7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8">

        <ImageView
            android:id="@+id/btnImg9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="8" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnImg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/btn2"
        android:layout_toLeftOf="@+id/btn2">

        <ImageView
            android:id="@+id/btnImg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2">

        <ImageView
            android:id="@+id/btnImg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playerTap"
            android:tag="2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yourTurnP1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="100dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/current_turn_bg_bottom_layer_red"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/current_turn_bg_top_layer_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/your_turn"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yourTurnP2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="-100dp"
        android:layout_alignParentTop="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/current_turn_bg_bottom_layer_blue"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/current_turn_bg_top_layer_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/your_turn"
            android:rotation="-180"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </RelativeLayout>

    <View
        android:id="@+id/resetView"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/reset_btn_bg"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:text="@string/reset"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/ubuntu_bold"
        android:rotation="-90"
        android:layout_alignParentEnd="true" />



</RelativeLayout>